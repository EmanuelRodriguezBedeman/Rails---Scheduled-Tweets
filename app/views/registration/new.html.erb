<h1 class="py-3">Sign-up to Schedule Tweets!</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>
    
    <div class="container w-50">
        <div class="my-3 row justify-content-center">
            <%= form.label :Email, class: "form-label col-1 text-start w-25" %>
            <div class="col-6">
                <%= form.text_field :email, class: "form-control col", placeholder: "email@mail.com" %>
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <%= form.label :password, class: "form-label col-1 text-start w-25" %>
            <div class="col-6">
                <%= form.password_field :password, class: "form-control col", placeholder: "password" %>
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <%= form.label :password_confirmation, class: "form-label col-1 text-start w-25" %>
            <div class="col-6">
                <%= form.password_field :password_confirmation, class: "form-control col", placeholder: "password" %>
            </div>
        </div>
    </div>
    <div>
        <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
<% end %>