<%= form_with model: tweet, data: { turbo: true }, local: true do |form| %>
    <%= render "shared/form_errors", form: form %>

    <div class="mb-3">
        <%= form.label :twitter_account_id, class: "form-label fs-5 fw-semibold" %>
        <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, {class: "form-control"} %>
    </div>

    <div class="mb-3">
        <%= form.label :body, class: "form-label fs-5 fw-semibold" %>
        <%= form.text_area :body, :maxlength => 280, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :'publish_at:', class: "form-label fs-5 fw-semibold" %>
        <div class="form-control">
            <%= form.datetime_select :publish_at%>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <%= form.button "Schedule", class: "btn btn-primary button-hover" %>

        <% if form.object.persisted? %>
            <%= link_to "Delete", form.object, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-outline-danger" %>
        <% end %>
    </div>
<% end %>