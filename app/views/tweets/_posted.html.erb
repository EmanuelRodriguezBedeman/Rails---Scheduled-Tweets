<% if tweet.published? == true %>
    <div class="tweetsCard card card-body mb-3">
        <div class="d-flex align-items-center">
            <div>
                <%= image_tag tweet.twitter_account.image, class: "rounded-circle border border-2 border-primary p-1 border-opacity-50" %>
            </div>
            <div class="d-flex align-items-center ms-3">
                <div class="d-flex align-items-start flex-column me-3">
                    <%= link_to "@#{tweet.twitter_account.username}:", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank, class: "customAnchor" %>
                    <div>
                        <span class="fst-italic text-black-50">"<%= tweet.body %>"</span>
                    </div>
                </div>
                <%= link_to "View Tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", class:"text-decoration-none", target: :_blank %>
            </div>
        </div>
    </div>
<% end %>