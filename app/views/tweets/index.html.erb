<div class="container">
    <div class="d-flex justify-content-between align-items-center py-3">
        <h1 class="me-3">Tweets</h1>
    
        <% if Current.user.twitter_accounts.any? %>
            <%= link_to "Schedule a tweet", new_tweet_path, class: "btn btn-primary" %>
        <% end %>
    </div>
    
    <% if Current.user.twitter_accounts.none? %>
        <%= button_to "Connect Twitter", "/auth/twitter", data: {turbo: "false"}, method: :post, class:"btn btn-primary mt-5" %>
    <% end %>
    
    <%= render @tweets %>
</div>