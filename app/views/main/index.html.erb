<div class="container d-block mt-5 px-0">
    <div class="container text-center">
        <div class="row">
            <h1 class="siteTitle col-lg-12 mb-5">Scheduled Tweets!</h1>
        </div>
        <div class="row justify-content-center">
            <i class="col-2 homeIconSize bi bi-twitter pe-0"></i>
            <i class="col-2 homeIconSize bi bi-pencil ps-0"></i>
        </div>
    </div>

    <div id="features" class="">

        <div id="firstFeature" class="card card-width custom-margin">
            <div class="row gx-0">
                <div class="col-md-3 mx-3">
                    <%= image_tag "mind.png", id:"mindImage", class:"roundBackground col-4 col-md-12" %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title fs-2">Have a tweet in mind?</h5>
                        <p class="card-text">
                            <i class="bi bi-arrow-return-right mx-2"></i>
                            A powerful quote from a movie just striked your mind?
                        </p>
                        <p class="card-text">
                            <i class="bi bi-arrow-return-right mx-2"></i>
                            Some huge idea that could make an impact?
                        </p>
                        <p class="card-text">
                           <i class="bi bi-arrow-right mx-2"></i>
                            Don't let it slip away! Write it down before you forget it!
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div id="secondFeature" class="card card-width ms-auto custom-margin">
            <div class="row gx-0">
                <div class="col-md-8 ms-auto">
                    <div class="card-body text-end">
                        <h5 class="card-title fs-2">Tired of watching the clock to post it?</h5>
                        <p class="card-text">
                            Now you can stop staring at it!
                            <i class="bi bi-arrow-return-left mx-2"></i>
                        </p>
                        <p class="card-text">
                            You can set the time to post your tweet, without time limit!
                            <i class="bi bi-arrow-left mx-2"></i>
                        </p>
                    </div>
                </div>
                <div class="col-md-3 mx-3">
                    <%= image_tag "clock.png", id:"clockImage", class:"roundBackground col-4 col-md-12" %>
                </div>
            </div>
        </div>

        <div id="thirdFeature" class="card card-width custom-margin">
            <div class="row gx-0">
                <div class="col-md-3 mx-3">
                    <%= image_tag "tweet.png", id:"mindImage", class:"roundBackground col-4 col-md-12" %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title fs-2">Watch your tweets getting posted!</h5>
                        <p class="card-text">
                            <i class="bi bi-arrow-return-right mx-2"></i>
                            Just sit down, chill and see the results of your long tactically planned tweets...
                        </p>
                        <p class="card-text fw-bold fst-italic text-end">
                            ...completely by themselves!
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
    </div>


    <div class="text-center my-5">
        <div class="mb-0">
            <h2>Ready to use it?</h2>
            <h2>Just sign up to start!</h2>
        </div>
        <div class="my-3">
            <i class="bi bi-arrow-down fs-1"></i>
        </div>
        <div>
            <%= link_to "Create an Account", sign_up_path, class:"btn btn-lg btn-primary buttonHover w-auto" %>
        </div>
    </div>
</div>