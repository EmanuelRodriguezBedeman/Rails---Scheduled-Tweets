<div class="container">
    <div class="d-flex justify-content-between align-items-center py-3">
        <h1 class="border-bottom border-2 border-opacity-25 border-primary fst-italic me-3">
            Twitter Accounts
            <i id="twitterIcon" class="bi bi-twitter"></i>
        </h1>
        <%= button_to "Add account", "/auth/twitter", data: {turbo: "false"}, method: :post, class:"btn btn-primary" %>
    </div>
    <% @twitter_accounts.each do |twitter_account| %>
        <div class="card card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <%= image_tag twitter_account.image, class: "rounded-circle border border-info border-2  p-1 border-opacity-50" %>
                    <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank, id: "customAnchor" %>
                </div>
                <%= button_to "Disconnect", twitter_account, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class:"btn btn-outline-danger mx-0" %>
            </div>
        </div>
    <% end %>
</div>