<div class="container">
    <div class="d-flex justify-content-start align-items-center py-3">
        <h1 class="me-3">Twitter Accounts</h1>
        <%= button_to "Add account", "/auth/twitter", data: {turbo: "false"}, method: :post, class:"btn btn-primary" %>
    </div>
    <% @twitter_accounts.each do |twitter_account| %>
        <div class="card card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <%= image_tag twitter_account.image, class: "rounded-circle" %> 
                    <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank %>
                </div>
                <%= button_to "Disconnect", twitter_account, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class:"btn btn-outline-danger" %>
            </div>
        </div>
    <% end %>
</div>