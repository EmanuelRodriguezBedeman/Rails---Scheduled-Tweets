            <ul class="nav navbar-nav ms-auto">
                <% if Current.user %>

                    <div class="d-none d-lg-flex">
                        <li class="nav-item">
                            <%= link_to "Edit Password", password_path, class:"nav-link buttonHover border rounded-pill" %>
                        </li>
                        <div class="vr d-none d-lg-block mx-2 p-0"></div>
                        <li class="nav-item">
                            <%= button_to "Logout", logout_path, method: :delete, class:"btn btn-outline-light customBorder buttonHover border rounded-pill" %>
