                    <div class="d-none d-lg-flex">
                        <li class="nav-item">
                            <%= link_to "Sign up", sign_up_path, class:"nav-link buttonHover border rounded-pill" %>
                        </li>
                        <div class="vr d-none d-lg-block mx-2 p-0"></div>
                        <li class="nav-item">
                            <%= link_to "Log in", log_in_path, class:"nav-link buttonHover border rounded-pill" %>
