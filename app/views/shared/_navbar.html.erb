                    </div>

                    <div class="row d-lg-none mt-3">
                        <div class="col d-lg-none text-center">
                            <li class="nav-item">
                                <%= link_to "Edit Password", password_path, class:"nav-link buttonHover border rounded-pill" %>
                            </li>
                        </div>
                        <div class="vr d-none d-lg-block mx-2 p-0"></div>
                        <div class="col d-lg-none text-center">
                            <li class="nav-item">
                                <%= button_to "Logout", logout_path, method: :delete, class:"btn btn-outline-light buttonHover border rounded-pill" %>
                            </li>
                        </div>
                    </div>

