<!-- Navbar -->
<nav class="navbar navbar-expand-lg border-bottom border-dark border-1" role="navigation">
    <div class="container-fluid" role="navigation">

        <!-- Navbar Title -->
        <div class="navbar-header" role="navigation">
            <%= link_to tweets_path, class:"navbar-brand h1 me-3 linkHover" do %>
                <span class="border-bottom">Tweets</span>
                <i class="bi bi-twitter text-white ms-1"></i>
            <% end %>
        </div>

        <div class="vr"></div>

        <!-- Dropdown Navbar Content -->
        <div class="btn-group">
            <!-- Navbar Button -->
            <button class="btn navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" 
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <ul class="dropdown-menu ms-auto mb-2 mb-lg-0" id="navbarNavDropdown">
                <li class="dropdown-item p-0"><%= link_to "Home", root_path, class:"linkHover"%></li>
                <li class="dropdown-item p-0"><%= link_to "About", about_path, class:"linkHover"%></li>
                <li class="dropdown-item p-0"><%= link_to "Twitter Accounts", twitter_accounts_path, class:"linkHover"%></li>
            </ul>
        </div>

        <!-- Navbar Links -->
        <ul class="nav navbar-nav navbar-left large-navbar-items">
            <li class= "" id="home">
                <%= link_to "Home", root_path, class:"nav-link linkHover"%>
            </li>
            <div class="vr"></div>
            <li class= "" id="about">
                <%= link_to "About", about_path, class:"nav-link linkHover"%>
            </li>
            <div class="vr"></div>
            <li class= "" id="twitterAccounts">
                <%= link_to "Twitter Accounts", twitter_accounts_path, class:"nav-link linkHover"%>
            </li>
        </ul>

        <!-- Navbar Session Interactions -->
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <% if Current.user %>
            <li class="nav-item">
                <%= link_to "Edit Password", password_path, class:"nav-link customHover border rounded-pill mx-2" %>
            </li>
            <div class="vr"></div>
            <li class="nav-item">
                <%= button_to "Logout", logout_path, method: :delete, class:"btn btn-outline-light customBorder customHover rounded-pill mx-2" %>
            </li>
            <% else %>
            <li class="nav-item">
                <%= link_to "Sign up", sign_up_path, class:"nav-link customHover border rounded-pill mx-2" %>
            </li>
            <div class="vr"></div>
            <li class="nav-item">
                <%= link_to "Log in", log_in_path, class:"nav-link customHover border rounded-pill mx-2" %>
            </li>
            <% end %>
        </ul>
    </div>
</nav>